{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["./src/*"]
    },
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests/**/*.test.ts", "tests/**/*.ts"]
}
